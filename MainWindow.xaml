<Window x:Class="SpendingInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpendingInfo" 
        xmlns:tabs="clr-namespace:SpendingInfo.Tabs"
        mc:Ignorable="d"
        Title="Spending Info" 
        Height="765" 
        Width="1277"
        WindowState="Maximized"
        >
    <Grid>
        <TabControl>
            <TabItem Header="Amazon Info" Width="110" Height="40" Background="#FF304960" Foreground="#FF959696">
                <tabs:AmazonTabContent x:Name="amazonTab"/>
            </TabItem>
            <TabItem Header="Settings" Width="110" Height="40">
                <tabs:AmazonSettingsWindow/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
